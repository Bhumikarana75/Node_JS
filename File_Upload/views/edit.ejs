<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>edit</title>
</head>

<body>
    <div align="center">
        <h1>Edit User</h1>
        <form action="/updateUser" method="post">
            <input type="hidden" name="editId" value="<%= single.id %>">
            <table border="1">
                <tr>
                    <td>Name:</td>
                    <td><input type="text" name="name" value="<%= single.userName %>"></td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td><input type="text" name="email" value="<%= single.userEmail %>"></td>
                </tr>
                <tr>
                    <td>Phone:</td>
                    <td><input type="text" name="phone" value="<%= single.userPhone %>"></td>
                </tr>
                <tr>
                    <td>Gender:</td>
                    <td>
                        <input type="radio" name="gender" value="male <%= single.userGender === " male" ? "checked" : "" %>" >Male
                        <input type="radio" name="gender" value="female <%= single.userGender === " female" ? "checked" : "" %>" >Female
                    </td>
                </tr>
                <tr>
                    <td>City</td>
                    <td>
                        <select name="city">
                            <option value="">--- Select City ---</option>
                            <% city=[ "surat", "Ahamdabad" , "rajkot" , "delhi"] %>
                            <% city.map((val)=> { %>
                                <option value="<%= val %>" <%=single.userCity===val ? "selected" : "" %>>
                                    <%= val %>
                                </option>

                            <% }) %>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Hobby:</td>
                    <td>
                        <input type="checkbox" name="hobby" value="dance" <%=single.userHobby.includes("dance")
                            ? "checked" : "" %>> dance
                        <input type="checkbox" name="hobby" value="read" <%=single.userHobby.includes("read")
                            ? "checked" : "" %>> read
                        <input type="checkbox" name="hobby" value="cook" <%=single.userHobby.includes("cook")
                            ? "checked" : "" %>> cook
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Update">
                    </td>
                </tr>
            </table>
        </form>
        <a href="/viewUser">view</a>
    </div>
</body>

</html>