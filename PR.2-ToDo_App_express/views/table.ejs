<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>

    <div class="container">
        <header class="header">
            <h1>View User Data</h1>
        </header>
        <section class="table-section">
            <table>
                <thead>
                    <tr>
                        <th>SRNO</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Task</th>
                        <th>Status</th>
                        <th>Deadline</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% record.map((val, i)=> { %>
                        <tr>
                            <td>
                                <%= ++i %>
                            </td>
                            <td>
                                <%= val.name %>
                            </td>
                            <td>
                                <%= val.phone %>
                            </td>
                            <td>
                                <%= val.email %>
                            </td>
                            <td>
                                <%= val.task %>
                            </td>
                            <td>
                                <%= val.status %>
                            </td>
                            <td>
                                <%= val.deadline %>
                            </td>
                            <td>
                                <a class="btn btn-delete" href="/deleteUser?delId=<%= val.id%>">Delete</a>
                                <a class="btn btn-edit" href="/editUser?editId=<%= val.id%>">Edit</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </section>
        <footer>
            <a href="/add" class="btn btn-add">+ &nbsp; Add New User</a>
        </footer>
    </div>

</body>

</html>