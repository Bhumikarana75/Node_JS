<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Table</title>
</head>
<body>

    <div align="center">
        <h2>User Data</h2>
        <form action="/viewUser">
            <table border="1">
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Email</td>
                    <td>Password</td>
                </tr>
                <tr>
                    <% view.map((val,index) => { %>
                        <tr>
                            <td>
                                <%= ++index %>
                            </td>
                            <td>
                                <%= val?.username %>
                            </td>
                            <td>
                                <%= val?.useremail %>
                            </td>
                            <td>
                                <%= val?.userpassword %>
                            </td>
                        </tr>
                    <% }) %>
                </tr>
            </table>
            <a href="/">Add User</a>
        </form>
    </div>
    
</body>
</html>