<%- include('../header') %>

    <div class="col-md-7 d-flex bg-light ">

        <div class="card p-4 shadow m-5" style="height: 350px; width:100%;">
            <form method="post" action="/subcategory/insertsubcategory" class="form-horizontal">

                <h2>Sub Category</h2>

                <% if(locals.message?.success) { %>
                    <div class="alert alert-success">
                        <%= locals.message?.success %>
                    </div>
                    <% } %>
                        <div class="card-body">
                            <div class="form-group row m-2">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label">
                                    Category</label>
                                <div class="col-sm-9">
                                    <select name="category" class="form-control">
                                        <option>---select category---</option>
                                        <% category.map((val)=>{ %>
                                            <option value="<%= val?.id %>">
                                                <%= val?.category %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row m-2">
                                <label for="fname"
                                    class="col-sm-3 text-right control-label col-form-label">Subcategory</label>
                                <div class="col-sm-9">
                                    <input type="text" name="subcategory" class="form-control"
                                        placeholder="Subcategory">
                                </div>
                            </div>

                        </div>
                        <div class="border-top">
                            <div class="card-body">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
            </form>
        </div>



    </div>

    <%- include('../Footer') %>