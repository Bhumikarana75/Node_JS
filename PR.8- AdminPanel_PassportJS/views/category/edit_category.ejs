<%- include('../header') %>

    <body class="d-flex align-items-center justify-content-center bg-light position-relative">

        <div class="card p-4 shadow col-7 m-5 position-absolute" style="height: 400px; left: 20%; top: 10%;">
            <% if(locals?.message?.success) { %>
                <div class="alert alert-success" id="success-message">
                    <%= locals?.message?.success %>
                </div>
                <% } %>

                    <h2 class="card-title text-center mb-2" style="font-size: 40px; font-weight: 500;">Edit Category
                    </h2>

                    <form action="/category/updatecategory" method="post" class="mt-3 ">
                        <input type="hidden" name="editid" value="<%= single?.id %>" />
                        <div class="mb-3 ">
                            <label for="categoryName" class="form-label">Category Name</label>
                            <input type="text" class="form-control" id="categoryName" name="categoryName" required>
                        </div>
                        <button type="submit" class="btn btn-primary ">Update Category</button>
                    </form>

                    <div class="mt-3 text-center">
                        <a href="/category" class="text-decoration-none">View Category</a>
                    </div>
        </div>
    </body>

    <%- include('../footer') %>