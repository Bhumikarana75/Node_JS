<%- include('../header') %>

    <div class="col-md-7 d-flex bg-light ">

        <div class="card p-4 shadow m-5" style=" width:100%;">
            <form method="post" action="/exsubcategory/insertexsubcategory" class="form-horizontal">

                <h2>Extra Sub-Category</h2>

                <% if(locals.message?.success) { %>
                    <div class="alert alert-success">
                        <%= locals.message?.success %>
                    </div>
                    <% } %>

                        <div class="card-body">
                            <div class="form-group row m-2">
                                <label for="fname" class="col-sm-4 text-right control-label col-form-label">
                                    Category</label>
                                <div class="col-sm-8">
                                    <select name="category" class="form-control">
                                        <option>---select Category---</option>
                                        <% <!-- key is from viewCategory and check name in input -->
                                            category.map((val)=>{ %>
                                            <option value="<%= val?.id %>"> <!-- category id comes as pr selected -->
                                                <%= val?.category %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row m-2">
                                <label for="fname" class="col-sm-4 text-right control-label col-form-label">
                                    Sub-Category</label>
                                <div class="col-sm-8">
                                    <select name="subcategory" class="form-control">
                                        <option>---select Sub-Category---</option>
                                        <% subcategory.map((val)=>{ %>
                                            <option value="<%= val?.id %>">
                                                <%= val?.subcategory %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row m-2">
                                <label for="fname"
                                    class="col-sm-4 text-right control-label col-form-label">Ex-Subcategory</label>
                                <div class="col-sm-8">
                                    <input type="text" name="exsubcategory" class="form-control"
                                        placeholder="Subcategory">
                                </div>
                            </div>

                        </div>
                        <div class="border-top">
                            <div class="card-body">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
            </form>
        </div>



    </div>

    <%- include('../Footer') %>