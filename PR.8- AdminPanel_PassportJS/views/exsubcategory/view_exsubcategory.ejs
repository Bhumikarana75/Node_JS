<%- include('../header') %>

    <div class="col-9">

        <div class="card p-4 shadow m-5" style="width:100%;">
            <h2 class="mb-4 mt-2">View EX-Sub-Category</h2>
            
        <% if(locals?.message?.success) { %>
            <div class="alert alert-success w-50" role="alert">
                <%= locals?.message?.success %>
            </div>
            <% } %>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Srno</th>
                        <th scope="col">Category</th>
                        <th scope="col">Sub-category</th>
                        <th scope="col">Ex-Subcategory</th>
                        <th scope="col">Action</th>
                        <th scope="col">Status</th>

                    </tr>
                </thead>
                <tbody>
                    <% exsubcategory.map((val,index)=>{ %>
                        <tr>
                            <td>
                                <%= ++index %>
                            </td>
                            <td>
                                <%= val?.categoryId?.category %>
                            </td>
                            <td>
                                <%= val?.subcategoryId?.subcategory %>
                            </td>
                            <td>
                                <%= val?.exSubCategory %>
                            </td>
                            <td>
                                <a href="/exsubcategory/deleteexsubcategory?did=<%= val?.id %>"
                                    class="btn btn-danger btn-sm"><i class="bi bi-trash3"></i></a>

                                <a href="/exsubcategory/editexsubcategory?eid=<%= val?.id %>"
                                    class="btn btn-primary btn-sm"><i class="bi bi-pencil-square"></i></a>
                            </td>
                            <td>

                                <% if(val?.status=="active" ) { %><a
                                        href="/exsubcategory/changestatus?id=<%= val?.id %>&status=deactive"
                                        class=" btn btn-success btn-sm">
                                        <%= val?.status %>
                                    </a>
                                    <% } else { %>
                                        <a href="/exsubcategory/changestatus?id=<%= val?.id %>&status=active"
                                            class="btn btn-warning btn-sm">
                                            <%= val?.status %>
                                        </a>
                                        <% } %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>


    </div>

    <%- include('../footer') %>